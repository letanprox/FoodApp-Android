<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:background="@drawable/custom_border"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_food"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/title_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:text="Gà Q"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/number_sold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="40dp"
        android:text="102+ da ban"
        android:textColor="#404040"
        android:textSize="13dp" />


    <TextView
        android:id="@+id/price_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="70dp"
        android:text="11,000đ"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />


    <LinearLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="68dp"


        android:layout_marginRight="10dp"

        android:gravity="right"
        >


        <ImageView
            android:id="@+id/minusCardBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"

            android:background="@drawable/custom_border1"
            app:srcCompat="@drawable/ic_baseline_remove_24" />



            <TextView
                android:id="@+id/numberItemTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#373b54"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold" />




        <ImageView
            android:id="@+id/plusCardBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"

            android:background="@drawable/red_bar"
            app:srcCompat="@drawable/ic_baseline_add_20" />


    </LinearLayout>


</RelativeLayout>